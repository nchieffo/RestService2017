<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project basedir="." default="build" name="RestService2017">
	<property environment="env"/>
	<property name="ECLIPSE_HOME" value="/opt/IBM/SDP96/"/>
	<property name="debuglevel" value="source,lines,vars"/>
	<property name="target" value="1.6"/>
	<property name="source" value="1.6"/>

	<path id="Web App Libraries.libraryclasspath">
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="*.jar" />
		</fileset>
	</path>
	<path id="EAR Libraries.libraryclasspath"/>
	<path id="WebSphere Portal.libraryclasspath">
		<fileset dir="${ECLIPSE_HOME}runtimes/base_v8_stub">
			<include name="*/*.jar" />
		</fileset>
		<fileset dir="${ECLIPSE_HOME}runtimes/portal_v80_stub">
			<include name="*/*.jar" />
		</fileset>
	</path>
	<path id="Project.classpath">
		<pathelement location="WebContent/WEB-INF/classes"/>
		<path refid="Web App Libraries.libraryclasspath"/>
		<path refid="EAR Libraries.libraryclasspath"/>
		<path refid="WebSphere Portal.libraryclasspath"/>
	</path>
	<target name="init">
		<mkdir dir="WebContent/WEB-INF/classes"/>
		<copy includeemptydirs="false" todir="WebContent/WEB-INF/classes">
			<fileset dir="src">
				<exclude name="**/*.launch"/>
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy includeemptydirs="false" todir="WebContent/WEB-INF/classes">
			<fileset dir="test">
				<exclude name="**/*.launch"/>
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy includeemptydirs="false" todir="WebContent/WEB-INF/classes">
			<fileset dir=".apt_generated">
				<exclude name="**/*.launch"/>
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	</target>
	<target name="clean">
		<delete dir="WebContent/WEB-INF/classes"/>
	</target>
	<target depends="clean" name="cleanall"/>
	<target depends="build-subprojects,build-project" name="build"/>
	<target name="build-subprojects"/>
	<target depends="init" name="build-project">
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="WebContent/WEB-INF/classes" includeantruntime="false" source="${source}" target="${target}">
			<src path="src"/>
			<src path="test"/>
			<src path=".apt_generated"/>
			<classpath refid="Project.classpath"/>
		</javac>
	</target>
	<target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects"/>
</project>