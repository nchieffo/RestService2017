<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE included>
<included>
	
	<insertFromJNDI env-entry-name="java:module/ModuleName" as="moduleName" />
	<contextName>${moduleName}</contextName>

	<property resource="application.properties" />

	<property name="logsFolder" value="${logging.logsFolder:-logs/${CONTEXT_NAME}}" />
	<property name="maxFileSize" value="${logging.maxFileSize:-2MB}" />
<!-- 	<property name="maxFileIndex" value="${logging.maxFileIndex:-10}" /> -->
	<property name="maxHistory" value="${logging.maxHistory:-60}" />
	<property name="totalSizeCap" value="${logging.totalSizeCap:-50MB}" />
	
	<property name="stdout.minLevel" value="${logging.stdout.minLevel:-TRACE}" />
	
	<property name="smtp.to" value="${logging.smtp.to:-n.chieffo@tecla.it}" />
	<property name="smtp.jndi" value="${logging.smtp.jndi:-mail/smtp}" />
	<property name="smtp.subject" value="${logging.smtp.subject:-${HOSTNAME} -- ${CONTEXT_NAME} -- ERROR!}" />
	
	<property name="pattern_compact" value="%level [%contextName] [%mdc{req:-no_request}] %logger{36} - %msg%n" />
	<property name="pattern_full" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %level [%contextName] [%mdc{req:-no_request}] %logger - %msg%n" />
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.core.filter.EvaluatorFilter">   
			<evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
			 	<marker>SKIP_STDOUT</marker>
			</evaluator>
			<onMismatch>NEUTRAL</onMismatch>
			<onMatch>DENY</onMatch>
		</filter>
		<filter class="it.tecla.utils.logging.logback.JULFilter" />
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>${stdout.minLevel}</level>
		</filter>
		<target>System.out</target>
		<encoder>
			<pattern>${pattern_compact}</pattern>
		</encoder>
	</appender>

	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.core.filter.EvaluatorFilter">   
			<evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
			 	<marker>SKIP_STDOUT</marker>
			</evaluator>
			<onMismatch>NEUTRAL</onMismatch>
			<onMatch>DENY</onMatch>
		</filter>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>warn</level>
		</filter>
		<target>System.err</target>
		<encoder>
			<pattern>${pattern_full}</pattern>
		</encoder>
	</appender>
	
