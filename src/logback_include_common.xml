	<appender name="FILE_BY_DATE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		
		<file>${logsFolder}/current.log</file>
		
		<encoder>
			<pattern>${pattern_full}</pattern>
		</encoder>
		
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${logsFolder}/by_date/%d{yyyy-MM}/previous.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>${maxFileSize}</maxFileSize>
			<maxHistory>${maxHistory}</maxHistory>
			<totalSizeCap>${totalSizeCap}</totalSizeCap>
		</rollingPolicy>
		
	</appender>
	
