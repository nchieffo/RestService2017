<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE included>
<included>

	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>warn</level>
		</filter>
		<target>System.err</target>
		<encoder>
			<pattern>${pattern_full}</pattern>
		</encoder>
	</appender>
	
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	
		<file>${logsFolder}/default.log</file>
	
		<encoder>
			<Pattern>${pattern_compact}</Pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>${logsFolder}/default.%i.log.gz</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>10</MaxIndex>
		</rollingPolicy>

		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>${maxFileSize}</MaxFileSize>
		</triggeringPolicy>
	</appender>

	<appender name="FILE_BY_THREAD_NAME" class="ch.qos.logback.classic.sift.SiftingAppender">

		<discriminator class="it.tecla.utils.logging.logback.ThreadNameDiscriminator" />
		<sift>

			<appender name="FILE-${threadName}" class="ch.qos.logback.core.rolling.RollingFileAppender">
				<file>${logsFolder}/by_thread_name/${threadName}.log</file>

				<encoder>
					<pattern>${pattern_compact}</pattern>
				</encoder>

				<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
					<FileNamePattern>${logsFolder}/by_thread_name/${threadName}.%i.log.gz</FileNamePattern>
					<MinIndex>1</MinIndex>
					<MaxIndex>10</MaxIndex>
				</rollingPolicy>

				<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
					<MaxFileSize>${maxFileSize}</MaxFileSize>
				</triggeringPolicy>

			</appender>

		</sift>
	</appender>

</included>